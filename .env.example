# AWS Configuration
AWS_DEFAULT_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# Bedrock Configuration
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0
# BEDROCK_ENDPOINT_URL=https://bedrock.us-east-1.amazonaws.com  # Optional

# Agent Configuration
AGENT_MAX_ITERATIONS=10
AGENT_TIMEOUT_SECONDS=300
AGENT_MEMORY_TYPE=conversation_buffer

# Tool Configuration
TOOL_TIMEOUT_SECONDS=30
MAX_FILE_SIZE_MB=100

# Observability (Optional - for monitoring and tracing)
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key
LANGFUSE_SECRET_KEY=your_langfuse_secret_key
LANGFUSE_HOST=https://cloud.langfuse.com
ENABLE_TRACING=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# API Keys for External Services (Optional)
SERPAPI_KEY=your_serpapi_key_for_web_search
OPENWEATHER_API_KEY=your_openweather_api_key

# Application Settings
APP_NAME=Strands Multi-Agent System
APP_VERSION=1.0.0
ENVIRONMENT=development

# Streamlit Configuration
STREAMLIT_PORT=8501
STREAMLIT_THEME=dark

# Storage Configuration
S3_BUCKET_NAME=your-s3-bucket-name
LOCAL_STORAGE_PATH=/tmp/strands-storage

# Monitoring (Optional)
GRAFANA_PASSWORD=admin